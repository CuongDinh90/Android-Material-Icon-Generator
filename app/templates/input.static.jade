// input
section#container-input.container-fluid.full-height(data-simplebar-direction='vertical')

    a(href='https://www.myadvent.net/?ref=android-material-icon-generator.bitdroid.de', target='_blank')#container-ads
        .content
            img(src='/img/myadvent/mascot.min.svg')
            span My
                strong Advent
            span.secondary Online Advent Calendars
        .snow

    #container-header
        h1
            | Android Material Icon Generator&nbsp;
            a(href='https://github.com/Maddoc42/Android-Material-Icon-Generator')
                i.fa.fa-github
        h2 Create simple icons for android with that loooong material shadow!


    .row.full-height

        // file picker
        .col-4-from-9.full-height
            #container-file-picker
                input#file-picker-input(type='file')
                #file-picker-overlay
                    #file-picker-overlay-content
                        p.input-title Drop SVG icon here
                        p.input-subtitle SVG must contain a single path which is your icon.

        // or
        .col-1-from-9.full-height
            #input-or
                | or

        // icon selector
        .col-4-from-9.full-height
            #container-icon-selector
                p.input-title Pick an icon from below
                p.input-subtitle
                    | All icons copied from the
                    a(href='https://design.google.com/icons/')  Google Material icons collection.
                .row
                    p.text-center
                        i.material-icons.icon-selector-sample android
                        i.material-icons.icon-selector-sample bug_report
                        i.material-icons.icon-selector-sample favorite
                        i.material-icons.icon-selector-sample thumb_up
                        i.material-icons.icon-selector-sample directions_bike
                        i.material-icons.icon-selector-sample child_friendly
                a(href='#icon-picker')
                    span

    // sample material icons
    include ./input-icon-picker.static.jade

    // about section
    include ./about.static.jade
